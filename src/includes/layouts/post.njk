---
permalink: "{% if path %}{{ path | slug }}{% else %}{{ page.fileSlug }}{% endif %}/index.html"
---

{% extends 'page.njk' %}

{% block body %}
    <p>{{url}}</p>

    {% if featuredImage %}
        <div class="post-cover-image" style="background-image: url('{{ featuredImage }}');"></div>
    {% endif %}

    <div>
        <h2>{{ title }}</h2>

        {% if draft %}
            <div class="draft-badge">
                <span>⚠️ DRAFT</span>
            </div>
        {% endif %}

        {% if excerpt %}
            <p class="excerpt">{{ excerpt }}</p>
        {% endif %}

        {% if tags %}
            <div class="mb-2">
                {% for tag in tags %}
                    {%- if tag !== "post" -%}
                        <a class="tag {{ tag | replace('.', '') }}" href="{{ site.baseUrl }}tag/{{ tag }}">{{ tag }}</a>
                    {%- endif -%}
                {% endfor %}
            </div>
        {% endif %}

        {% if date %}
            {% if updatedDate and (date|string) !== (updatedDate|string) %}
              <p class="text-sm italic">Last updated on
                    <span datetime="{{ date }}">{{ updatedDate | dateDisplay }}</span>. Created on
                    <span datetime="{{ date }}">{{ date | dateDisplay }}</span>.</p>
            {% else %}
                <p class="text-sm italic">Created on
                    <span datetime="{{ date }}">{{ date | dateDisplay }}</span>.</p>
            {% endif %}
        {% endif %}

        <div class="content post">
            {% if content | toc %}
                <hr />

                <h3>Table of Contents</h3>

                {{ content | toc | safe }}

                <hr />
            {% endif %}

            {{ content | safe }}
        </div>

        <div class="article-end">
            <span>✦</span>
            <span>✦</span>
            <span>✦</span>
        </div>

        {%- set nextPost = collections['postsWithoutDrafts'] | getNextCollectionItem(page) %}
        {%- set previousPost = collections['postsWithoutDrafts'] | getPreviousCollectionItem(page) %}

        <div class="post-navigation">
            <div class="post-nav-item post-nav-previous">
                {%- if previousPost %}
                    <a href="{{ previousPost.url | url }}">
                        <span class="nav-arrow">←</span>
                        <div class="nav-content">
                            <p class="nav-label">Previous</p>
                            <p class="nav-title">{{ previousPost.data.title }}</p>
                        </div>
                    </a>
                {% endif %}
            </div>

            <div class="post-nav-item post-nav-next">
                {%- if nextPost %}
                    <a href="{{ nextPost.url | url }}">
                        <div class="nav-content">
                            <p class="nav-label">Next</p>
                            <p class="nav-title">{{ nextPost.data.title }}</p>
                        </div>
                        <span class="nav-arrow">→</span>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
